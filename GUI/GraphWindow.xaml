<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:g4n="clr-namespace:Graphviz4Net.WPF;assembly=Graphviz4Net.WPF" 
        xmlns:WpfExt="clr-namespace:WPFExtensions.Controls;assembly=WPFExtensions" 
        xmlns:Parser="clr-namespace:Book2Chart.Parser;assembly=Parser" x:Class="Book2Chart.GUI.GraphWindow" 
        Title="GraphWindow" Height="600" Width="800">
    <Grid>
        <WpfExt:ZoomControl>
            <g4n:GraphLayout Graph="{Binding Graph}" />
        </WpfExt:ZoomControl>
    </Grid>
</Window>
